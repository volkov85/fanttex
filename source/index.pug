extends pug/layout

block variables
  -
    let page = {
      title: 'Fanttex',
      name: 'index',
      type: 'desktop'
    };

block content
  h1.visually-hidden Fanttex - Главная страница

  section.banners
    div.container
      div.banners__wrapper(class="swiper-container")
        div.banners__list(class="swiper-wrapper")
          div.banners__group(class="swiper-slide")
            div.banner
              picture.banner__image(itemscope itemtype="https://schema.org/ImageObject")
                source(srcset="img/banner_01-image-720.jpg" media="(min-width: 1500px)")
                source(srcset="img/banner_01-image-570.jpg" media="(min-width: 1200px)")
                img(src="img/banner_01-image-420.jpg" alt="Костюмные ткани" width="420" height="340" loading="lazy" title="Костюмные ткани" decoding="async" itemprop="contentUrl")
                meta(itemprop="datePublished" content="2020-11-23")
                meta(itemprop="author" content="FANNTEX — ткани для одежды оптом и в нарезку")
              div.banner__content
                h3.banner__title Костюмные ткани
                p.banner__text Осенняя коллекция
                a.banner__link(href="./catalog.html") Смотреть каталог

            div.banner
              a(href="./catalog.html")
                picture.banner__image(itemscope itemtype="https://schema.org/ImageObject")
                  source(srcset="img/banner_02-image-720.jpg" media="(min-width: 1500px)")
                  source(srcset="img/banner_02-image-570.jpg" media="(min-width: 1200px)")
                  img(src="img/banner_02-image-420.jpg" alt="Шелк Армани" width="420" height="340" loading="lazy" title="Шелк Армани" decoding="async" itemprop="contentUrl")
                  meta(itemprop="datePublished" content="2020-11-23")
                  meta(itemprop="author" content="FANNTEX — ткани для одежды оптом и в нарезку")

          div.banners__group(class="swiper-slide")
            div.banner(class="banner--wide")
              picture.banner__image(itemscope itemtype="https://schema.org/ImageObject")
                source(srcset="img/banner_01-image-1470.jpg" media="(min-width: 1500px)")
                source(srcset="img/banner_01-image-1170.jpg" media="(min-width: 1200px)")
                img(src="img/banner_01-image-870.jpg" alt="Костюмные ткани" width="870" height="340" loading="lazy" title="Костюмные ткани" decoding="async" itemprop="contentUrl")
                meta(itemprop="datePublished" content="2020-11-23")
                meta(itemprop="author" content="FANNTEX — ткани для одежды оптом и в нарезку")
              div.banner__content
                h3.banner__title Костюмные ткани
                p.banner__text Осенняя коллекция
                a.banner__link(href="./catalog.html") Смотреть каталог

          div.banners__group(class="swiper-slide")
            div.banner(class="banner--wide")
              a(href="./catalog.html")
                picture.banner__image(itemscope itemtype="https://schema.org/ImageObject")
                  source(srcset="img/banner_02-image-1470.jpg" media="(min-width: 1500px)")
                  source(srcset="img/banner_02-image-1170.jpg" media="(min-width: 1200px)")
                  img(src="img/banner_02-image-870.jpg" alt="Шелк Армани" width="870" height="340" loading="lazy" title="Шелк Армани" decoding="async" itemprop="contentUrl")
                  meta(itemprop="datePublished" content="2020-11-23")
                  meta(itemprop="author" content="FANNTEX — ткани для одежды оптом и в нарезку")

  section.catalog
    div.container
      block filters
        +filters()

      div.catalog__list
        +product-card({counter: 1, imagesQuantity: 2, variantsQuantity: 20, variantSelected: 13, isFavorite: true})

        +product-card({counter: 2, name: 'Костюмная T/R «Хлоя»', id: '01.209.000', price: '332.36', variantSelected: 6, isInCart: true, isNew: true})

        +product-card({counter: 3, name: 'Костюмная T/R', id: '01.209.000', price: '332.36', priceSale: '151.18', imagesQuantity: 4, unit: 'кг', variantSelected: 3, isInCart: true, isNew: true, discount: 36})

        +product-card({counter: 4, name: 'Пайетки на трикотаже, двусторонние, матовые', id: '01.209.000', price: '332.36', priceSale: '151.18', variantSelected: 9, discount: 36})

        +product-card({counter: 5, isOutOfStock: true})

        - for (let i = 6; i <= 60; i++)
          +product-card({counter: i})

      +pagination({isShown: true})
