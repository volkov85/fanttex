extends pug/layout

block variables
  -
    let page = {
      title: 'Fanttex',
      name: 'index',
      type: 'mobile'
    };

block content
  h1.visually-hidden Fanttex - Главная страница

  section.banners
    div.container
      div.banners__wrapper(class="swiper-container")
        div.banners__list(class="swiper-wrapper")
          div.banners__group(class="swiper-slide")
            div.banner
              div.banner__image(itemscope itemtype="https://schema.org/ImageObject")
                img(src="img/banner_01-image-330.jpg" alt="Костюмные ткани" width="330" height="250" loading="lazy" title="Костюмные ткани" decoding="async" itemprop="contentUrl")
                meta(itemprop="datePublished" content="2020-11-23")
                meta(itemprop="author" content="FANNTEX — ткани для одежды оптом и в нарезку")
              div.banner__content
                h3.banner__title Костюмные ткани
                p.banner__text Осенняя коллекция
                a.banner__link(href="./catalog-mobile.html") Смотреть каталог

          div.banners__group(class="swiper-slide")
            div.banner
              a(href="./catalog-mobile.html")
                div.banner__image(itemscope itemtype="https://schema.org/ImageObject")
                  img(src="img/banner_02-image-330.jpg" alt="Шелк Армани" width="330" height="250" loading="lazy" title="Шелк Армани" decoding="async" itemprop="contentUrl")
                  meta(itemprop="datePublished" content="2020-11-23")
                  meta(itemprop="author" content="FANNTEX — ткани для одежды оптом и в нарезку")

  section.catalog
    div.container
      block filters
        +filters('sorting')

      div.catalog__list
        +product-card({counter: 1, imagesQuantity: 2, variantsQuantity: 20, variantSelected: 13, isFavorite: true})

        +product-card({counter: 2, name: 'Костюмная T/R «Хлоя»', id: '01.209.000', price: '332.36', variantSelected: 6, isInCart: true, isNew: true})

        +product-card({counter: 3, name: 'Костюмная T/R', id: '01.209.000', price: '332.36', priceSale: '151.18', imagesQuantity: 4, unit: 'кг', variantSelected: 3, isInCart: true, isNew: true, discount: 36})

        +product-card({counter: 4, name: 'Пайетки на трикотаже, двусторонние, матовые', id: '01.209.000', price: '332.36', priceSale: '151.18', variantSelected: 9, discount: 36})

        +product-card({counter: 5, isOutOfStock: true})

        //- - for (let i = 6; i <= 60; i++)
        //-   +product-card({counter: i})

      +pagination({isShown: true})
